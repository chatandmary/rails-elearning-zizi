<div class="row">
  <div class="col-md-4">
    <div class="user-info text-center">
      <%= link_to gravatar_for @user %>
      <h2 class="border-bottom"><%= @user.name %></h2>
      <ul class="f-list">
        <li class="li-count"><%= link_to "#{@user.following.count} Following",following_user_path(@user) %></li>
        <li class="li-count"><%= link_to "#{@user.follower.count} Follower",followers_user_path(@user) %></li>
      </ul>
      <%= render "follow_form" if logged_in? %>
      <% if @activities.any? %>
      <small>Learned <%= link_to word_all(current_user.id),user_words_path(current_user.id), class:"learned" %> words</small>
      <% else %>
      <small>Learned 0 words</small>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="activity border">
      <p class="ac-title">Activity</p>
      <% if @activities.any? %>
          <% @activities.each do |activity| %>
          <ul class="ac-list">
            <% if activity.action_type == "Lesson"%>
            <li>
            <%= gravatar_for activity.user %><%= link_to activity.user.name, activity.user %> learned <%= lesson_count(activity.action_id) %> of <%= category_words(activity.action_id) %> words <%= link_to category_title(activity.action_id), lesson_path(activity.action_id) %>
             | <small>Posted <%= time_ago_in_words activity.created_at %> ago</small>
            </li>
            <% else %>
            <li>
            <%= gravatar_for activity.user %><%= link_to activity.user.name, activity.user %> followed <%= link_to user_follow(activity.action_id).name, user_follow(activity.action_id) %>
             | <small>Posted <%= time_ago_in_words activity.created_at %> ago</small>
            </li>
            <% end %>
          </ul>
          <% end %>
        <%= will_paginate @activities %>
      <% else %>
        <div class="text-center">Nothing to show</div>
      <% end %>
    </div>
  </div>
</div>



