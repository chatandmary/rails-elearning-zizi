<h1 class="cate-h1 mb-4">Categories</h1>

<table class="table table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <% @categories.each do |category| %>
  <tbody>
    <tr>
      <td><%= link_to category.title, categories_path %></td>
      <td><%= category.description %></td>
      <td><%= link_to "Add word", new_admin_category_path %>|<%= link_to "Edit", edit_admin_category_path(category) %>|<%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"}%></td>
    </tr>
  </tbody>
<% end %>
</table>


<div class="pagi">
<%= will_paginate %>
</div>